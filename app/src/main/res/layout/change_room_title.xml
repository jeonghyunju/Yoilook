<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eaebed"
    tools:context="com.example.hyunjujung.yoil.ChangeRoomTitle">

    <TextView
        android:id="@+id/titleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="채팅방 이름"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/changeTitleDone"
        android:onClick="clickBtn"
        android:layout_width="65dp"
        android:layout_height="37dp"
        android:layout_alignParentRight="true"
        android:text="완료"
        android:background="@null"/>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@id/titleTv"/>

    <TextView
        android:id="@+id/titleTv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="8dp"
        android:layout_below="@id/view1"
        android:text="채팅방 이름을 입력하세요."/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleTv2"
        android:background="#fff">

        <EditText
            android:id="@+id/changeRoomTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:padding="5dp"
            android:background="@null"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"/>

        <ImageButton
            android:id="@+id/deleteTitle"
            android:onClick="clickBtn"
            android:layout_width="45dp"
            android:layout_height="35dp"
            android:src="@drawable/cancel"
            android:background="@null"/>

    </LinearLayout>
</RelativeLayout>
